<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpik"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="INI REGISTER"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ic_username"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_person_24"
        android:layout_below="@+id/text_title"
        android:layout_marginTop="200dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ic_username"
        android:layout_below="@+id/text_title"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:hint="Username" />

    <ImageView
        android:id="@+id/ic_camera"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_person_24"
        android:layout_below="@+id/editTextUsername"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ic_camera"
        android:layout_below="@+id/editTextUsername"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:hint="emails" />

    <ImageView
        android:id="@+id/ic_camera2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_person_24"
        android:layout_below="@+id/editTextEmail"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ic_camera"
        android:layout_below="@+id/editTextEmail"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:hint="Phone" />

    <ImageView
        android:id="@+id/ic_camera3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_person_24"
        android:layout_below="@+id/editTextPhone"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ic_camera"
        android:layout_below="@+id/editTextPhone"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:hint="Password" />



    <TextView
        android:id="@+id/forgetps"
        android:layout_below="@+id/editTextPassword"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/forget"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/buttonlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Login" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/teks1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:textSize="15dp"
            android:text="Already have an account?"
            />

        <TextView
            android:id="@+id/teks2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/teks1"
            android:textSize="15dp"
            android:text="SIGN IN"
            />

    </LinearLayout>


</RelativeLayout>